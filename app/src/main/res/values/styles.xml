<resources>

    <style name="TextView.Category" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--
        Drawable settings in http://romannurik.github.io/AndroidAssetStudio:
            - trim
            - padding 0%
            - size 8dp
            - padding around icon 1dp
    -->
    <style name="AverageRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/average_rating_bar</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>

    <style name="UserRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/user_rating_bar</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>

</resources>
